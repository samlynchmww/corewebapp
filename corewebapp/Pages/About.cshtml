@page
@model YourNamespace.Pages.AboutModel // Ensure this matches your actual namespace
@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40;
        }
        .about-section {
            padding: 50px 0;
            text-align: center;
        }
        .about-title {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }
        .about-content {
            font-size: 1.2rem;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="about-section">
        <h1 class="about-title">About Us</h1>
        <p class="about-content">Welcome to our cool page! We are dedicated to providing you with the best experience possible. Our team is passionate about web development and design, and we strive to create engaging and user-friendly applications.</p>
        <p class="about-content">Feel free to explore our site and learn more about what we do!</p>
    </div>
</body>
</html>